<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xmlns:pro="http://www.liquibase.org/xml/ns/pro" 
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog     http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd 
                      http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
                      http://www.liquibase.org/xml/ns/pro             http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

  <property  name="table.name"  value="core_image" global="false"/>

  <changeSet  author="Lautaro Osinaga"  id="6_create_${table.name}_table" >
    <preConditions onFail="MARK_RAN" onFailMessage="Table ${table.name} already exists" >  <not> <tableExists tableName="${table.name}" /> </not>  </preConditions>
    <createTable tableName="${table.name}" > 
      <!-- general properties -->
      <column  name="id"          type="${type.id}"   autoIncrement="true"
                                                      remarks="GenericModel"   >    <constraints nullable="false" primaryKey="true" primaryKeyName="${table.name}_PK" />                  </column>
      <column  name="external_id" type="${type.externalId}" remarks="PublicModel" > <constraints nullable="false" unique="true"     uniqueConstraintName="${table.name}_externalId_UK" /> </column>
      
      <!-- custom properties -->
      <column  name="url"         type="varchar(255)">   <constraints nullable="false" /> </column>
      <column  name="type"        type="varchar(1024)">  <constraints nullable="false" /> </column>
      <column  name="width"       type="int">            <constraints nullable="false" /> </column>
      <column  name="height"      type="int">            <constraints nullable="false" /> </column>
      <column  name="description" type="varchar(255)">                                    </column>
    </createTable>  
  </changeSet>
</databaseChangeLog>
